{
    "// AUGMENT OPTIMIZATION SETTINGS": "Copy these to your VSCode settings.json",
    
    "// Performance Settings": "",
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordBasedSuggestions": false,
    "editor.parameterHints.enabled": false,
    "editor.hover.enabled": false,
    "editor.lightbulb.enabled": false,
    
    "// Extension Performance": "",
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    
    "// File Watching": "",
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/vendor/**": true,
        "**/storage/**": true,
        "**/.git/**": true,
        "**/tmp/**": true,
        "**/temp/**": true
    },
    
    "// Search Performance": "",
    "search.exclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "**/storage": true,
        "**/.git": true,
        "**/tmp": true,
        "**/temp": true
    },
    
    "// Memory Management": "",
    "typescript.preferences.includePackageJsonAutoImports": "off",
    "typescript.suggest.autoImports": false,
    "javascript.suggest.autoImports": false,
    
    "// UI Performance": "",
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "telemetry.telemetryLevel": "off",
    
    "// Augment Specific": "",
    "augment.performance.mode": "high",
    "augment.chat.debounceDelay": 300,
    "augment.ui.animations": false,
    "augment.cache.enabled": true,
    "augment.network.timeout": 30000
}
